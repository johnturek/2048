<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - 2048 Game</title>
    <meta name="description" content="Play 2048 game online. Join the numbers and get to the 2048 tile!" />
    <meta name="theme-color" content="#faf8ef" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/game.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
    
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', Arial, sans-serif;
            background-color: #faf8ef;
            color: #776e65;
            -webkit-tap-highlight-color: transparent;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
        
        .container {
            max-width: 100% !important;
            padding: 0 !important;
            margin: 0 !important;
        }
        
        main {
            padding: 0 !important;
            margin: 0 !important;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
    </style>
</head>
<body>
    <main role="main">
        @RenderBody()
    </main>
    
    <script src="~/js/game.js" asp-append-version="true"></script>
    <script>
        // Disable zooming on mobile devices
        document.addEventListener('touchmove', function (event) {
            if (event.scale !== 1) { event.preventDefault(); }
        }, { passive: false });

        // Prevent double-tap zoom
        let lastTap = 0;
        document.addEventListener('touchend', function (event) {
            const currentTime = new Date().getTime();
            const tapLength = currentTime - lastTap;
            if (tapLength < 300 && tapLength > 0) {
                event.preventDefault();
            }
            lastTap = currentTime;
        }, { passive: false });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
