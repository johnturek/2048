@page
@model IndexModel
@{
    ViewData["Title"] = "2048 Game";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/color-schemes.css" asp-append-version="true" />

<div class="game-container">
    <div class="game-header">
        <h1>2048</h1>
        <div class="scores">
            <div class="score-box">
                <div class="score-title">SCORE</div>
                <div id="score" class="score-value">0</div>
            </div>
            <div class="score-box">
                <div class="score-title">BEST</div>
                <div id="best-score" class="score-value">0</div>
            </div>
        </div>
    </div>

    <div class="game-intro">
        <p>Join the numbers and get to the <strong>2048 tile!</strong></p>
        <div class="game-buttons">
            <button id="new-game" class="game-button">New Game</button>
            <button id="auto-play" class="game-button">Auto Play</button>
            <button id="stop-auto-play" class="game-button" style="display: none;">Stop Auto Play</button>
        </div>
    </div>
    
    <div class="color-scheme-selector">
        <label for="color-scheme">Color Scheme:</label>
        <select id="color-scheme" class="scheme-select">
            <option value="default">Default</option>
            <option value="dark">Dark</option>
            <option value="pastel">Pastel</option>
        </select>
    </div>

    <div class="game-board-container">
        <div id="game-board" class="game-board">
            <!-- Tiles will be generated by JavaScript -->
        </div>
    </div>

    <p class="game-explanation">
        <strong>How to play:</strong> Use your <strong>arrow keys</strong> to move the tiles. When two tiles with the same number touch, they <strong>merge into one!</strong>
    </p>
</div>

@section Scripts {
    <script src="~/js/game.js" asp-append-version="true"></script>
}
